<p><a href="/transactions/new">Create Transaction</a></p>

<table>
  <tr>
     <th>Category</th>
     <th>Merchant</th>
     <th>Value</th>
     <th>Transaction Date</th>
     <th>See more</th>
   </tr>
   <% for transaction in @transactions%>
   <tr>
    <td><%= transaction.category.name() %></td>
    <td><%= transaction.merchant.name() %></td>
    <td><%= transaction.value() %></td>
    <td><%= transaction.transaction_date() %></td>
    <td><a href="/transactions/<%= transaction.id %>">Show</a></td>
    <td><a href="/transactions/merchant/<%= transaction.merchant_id %>">Show merchant</a></td>
    </tr>
    <% end %>
    <p><%= @total %><p>

  <label>
    <form action = "/categories/filter" method="post">
    <select name="category_id">
    <% for category in @categories %>
      <option value="<%=category.id%>"><%=category.name%></option>
    <% end %>
    </select>
  </label>
  <input type="submit" value="Filter"/>
</table>


